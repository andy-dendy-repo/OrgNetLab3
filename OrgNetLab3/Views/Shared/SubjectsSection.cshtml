<div class="row">
                <h2 class="text-center p-4">Subjects</h2>
                <div class="col-md-3">
                    <div>
                       <div class="form-group">
                          <label>Name</label>
                          <input class="form-control" v-model="subject.name">
                       </div>
                       <button type="submit" class="btn btn-primary mt-3" v-on:click="addSubject">Add</button>
                       <button type="submit" class="btn btn-primary mt-3" v-on:click="updateSubject">Update</button>
                       <button type="submit" class="btn btn-primary mt-3" v-on:click='subject = {}'>Reset</button>
                    </div>
                </div>
                <div class="col-md-9">
                    <table class="table text-center">
                      <thead class="table-light">
                        <tr>
                          <th>#</th>
                          <th>Name</th>
                          <th></th>
                        </tr>
                      </thead>
                      <tbody>
                        <tr v-for="item in subjects" v-on:click="subject = item">
                          <th>{{item.id}}</th>
                          <th>{{item.name}}</th>
                          <th><button class="btn btn-danger" v-on:click='deleteSubject(item)'>Delete</button></th>
                        </tr>
                      </tbody>
          
                    </table>
                </div>
            </div>
            <hr>