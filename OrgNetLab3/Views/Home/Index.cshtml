<!DOCTYPE html>
<html lang="en">
<head>
    @{
        await Html.RenderPartialAsync("Head");
    }
    
    <style>
        form {
            max-width: 500px !important;
            margin: auto;
            margin-top: 25px !important;
        }
    </style>
</head>
<body>
    <div id="app">
        <div class="p-5 bg-primary text-white text-center">
            <h1>Welcome to school</h1>
            <p>Remember: your parents are gonna punish you for misbehaving</p>
        </div>

        <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
            <div class="container-fluid">
                <ul class="navbar-nav m-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/home/student">Student</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/home/teacher">Teacher</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/home/chat">Chat</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/api/account/logout">Login out</a>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="container">
            <div class="row">
                <form action="/api/account/signin" method="POST">
                  <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input v-model="email" type="email" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                  </div>
                  <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input v-model="password" type="password" name="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                  </div>
                  <button type="submit" class="btn btn-primary mt-3" v-on:click="signIn">Submit</button>
                </form>
            </div>
        </div>

        <div class="mt-5 p-4 bg-dark text-white text-center">
            <p>Footer</p>
        </div>
    </div>
</body>
</html>